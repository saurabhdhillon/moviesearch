    <style name="view_sep_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@color/color_view_sep_bg</item>
    </style>

    <style name="et_name_info_screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>

        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="view_sep_info_screen" parent="view_sep_bg">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@color/color_discvr_done</item>
    </style>


    <style name="tv_action_store_detail" parent="wrap_wrap">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="frame_bg_action_store_detail" parent="match_wrap">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>


    <style name="tv_green_store_detail" parent="wrap_wrap">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_discvr_done</item>
    </style>


    <style name="tv_desc_store_detail" parent="wrap_wrap">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="tv_first_character" parent="match_match">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fab_add_team" parent="wrap_wrap">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="tv_card_count" parent="wrap_wrap">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:text">5</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_team_name" parent="match_wrap">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="under_line" parent="match_wrap">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@color/et_gray</item>
    </style>
    <style name="under_line_orderdetail" parent="match_wrap">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:background">@color/et_gray</item>
    </style>
    <style name="horizontal_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/et_gray</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>
